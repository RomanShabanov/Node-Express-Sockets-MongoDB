{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "utils/*": ["utils/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["services/**/*"]
}
